---
const { title, url, description, image } = Astro.props;
---

<a href={url} class="card-link">
  <div class="card">
    <div class="card-img-container">
      <img class="card-img" src={image} alt="image"/>
      <div class="card-img-overlay"></div>
    </div>
    <div class="card-content">
      <h2 class="card-title">{title}</h2>
      <p class="card-description">{description}</p>
    </div>
  </div>
</a>

<style define:vars={{ image }}>
  .card-link {
    text-decoration: none;
    cursor: pointer;
  }

  .card {
    width: 300px;
    height: 400px;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.5s;
  }

  .card:hover {
    transform: scale(0.9);
  }

  .card-img-container {
    width: 100%;
    height: 66.66%;
    position: relative;
    background-color: black;
    overflow: hidden;
    transition: height 0.5s;
  }

  .card:hover .card-img-container {
    height: 33.33%;
  }

  .card-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .card-img-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    opacity: 0;
    transition: opacity 0.5s;
  }

  .card:hover .card-img-overlay {
    opacity: 1;
  }

  .card-content {
    width: 100%;
    height: 33.33%;
    padding: 2rem;
    box-sizing: border-box;
    overflow: hidden;
    transition: height 0.5s;
    background-color: black;
    color: white;
  }

  .card:hover .card-content {
    height: 66.66%;
  }

  .card-title {
    font-size: 24px;
    margin-bottom: 10px;
  }

  .card:hover .card-description {
    display: block;
  }

  .card-description {
    font-size: 14px;
    line-height: 1.5;
    overflow: hidden;
    text-overflow: ellipsis;
    display: none;

  }


</style>
